<div class="dashboard">
    <div class="title-container">
        <h2>Dashboard</h2>
        <a href="/pensamentos/add" class="btn">Criar pensamento</a>
    </div>
    <h3>Seus Pensamentos</h3>
    <ul>
        {{#each pensamentos}}
            <li>
                <span class="label">{{this.title}}</span>
                <span class="actions">
                    <a href="/pensamentos/update/{{this.id}}" class="btn">Editar</a>
                    <form action="/pensamentos/remove" method="post">
                        <input type="hidden" name="id" value="{{this.id}}">
                        <input type="submit" value="Excluir" class="btn">
                    </form>
                </span>
            </li>
        {{/each}}
    </ul>
    {{#if pensamentosVazios}}
        <p>Sua caixa de pensamentos est√° vazia..</p>
    {{/if}}
</div>